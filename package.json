{
  "name": "formula-be",
  "version": "1.0.0",
  "description": "Formula backend project",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "rimraf dist && tsc-watch --onSuccess \"node --experimental-worker ./dist/index.js\"",
    "rebuild:be": "docker-compose build backend && docker-compose rm --stop backend && docker-compose up -d backend",
    "start:docker": "npm run build && node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mynameiszsofia/formula-be.git"
  },
  "author": "Zsofia Lakatos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mynameiszsofia/formula-be/issues"
  },
  "homepage": "https://github.com/mynameiszsofia/formula-be#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  }
}
